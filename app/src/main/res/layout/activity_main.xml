<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#212121">


    <Button
            android:text="Сброс"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/resetTime"
            android:enabled="false"
            android:background="@drawable/reset_button"
            android:layout_marginBottom="136dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="60dp" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="Старт"
            android:background="@drawable/start_button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/startTime"
            android:layout_marginStart="60dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="136dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:text="0:00:000"
            android:textSize="40sp"
            android:textColor="#E22727"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeText"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="184dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.711"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_action_name"
            android:id="@+id/imageView2"
            android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/timeText"
            app:layout_constraintVertical_bias="0.846"/>


</android.support.constraint.ConstraintLayout>